<Window x:Class="MouseProfiles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MouseProfiles"
        xmlns:vms="clr-namespace:MouseProfiles.ViewModels"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        WindowState="Minimized"
        Topmost="True"
        ResizeMode="NoResize"
        Title="MainWindow" Height="300" Width="200"
        Closing="Window_Closing"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Window.Resources>
        <vms:MouseProfileViewModel x:Key="mouseProfile"/>
    </Window.Resources>
    <Grid>
        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" ItemsSource="{Binding Source={StaticResource mouseProfile}}" DisplayMemberPath="Name"/>
    </Grid>
</Window>
